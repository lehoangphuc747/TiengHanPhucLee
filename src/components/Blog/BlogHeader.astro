---
// Component header cho trang blog
// Tuân thủ phong cách minimalist, không gradient

export interface Props {
  title?: string;
  description?: string;
  className?: string;
}

const { 
  title = "Bài viết",
  description = "Khám phá những bài viết về học tiếng Hàn và văn hóa Hàn Quốc",
  className = ''
} = Astro.props;
---

<header class={`blog-header ${className}`}>
  <h1 class="blog-header__title">{title}</h1>
  <p class="blog-header__description">{description}</p>
</header>

<style>
  .blog-header {
    text-align: center;
    margin-bottom: var(--spacing-3xl);
  }

  .blog-header__title {
    font-size: var(--font-size-4xl);
    font-weight: var(--font-weight-bold);
    color: var(--color-text);
    margin-bottom: var(--spacing-md);
  }

  .blog-header__description {
    font-size: var(--font-size-lg);
    color: var(--color-text-muted);
    max-width: 600px;
    margin: 0 auto;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .blog-header__title {
      font-size: var(--font-size-3xl);
    }
  }
</style>
