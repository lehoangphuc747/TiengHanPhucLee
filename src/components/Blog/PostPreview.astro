---
// Component hiển thị preview bài viết cho trang chủ
// Tuân thủ phong cách minimalist, không gradient

export interface Props {
  title: string;
  category: string;
  slug: string;
  readingTime: number;
  className?: string;
}

const { title, category, slug, readingTime, className = '' } = Astro.props;
---

<div class={`post-preview ${className}`}>
  <div class="post-preview__header">
    <span class="post-preview__category">{category}</span>
    <span class="post-preview__reading-time">
      {readingTime} phút đọc
    </span>
  </div>
  
  <h3 class="post-preview__title">
    <a href={`/blog/${slug}`} class="post-preview__link">
      {title}
    </a>
  </h3>
</div>

<style>
  .post-preview {
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: var(--spacing-xl);
    transition: all var(--transition-fast);
  }

  .post-preview:hover {
    box-shadow: var(--shadow-md);
    border-color: var(--color-primary);
  }

  .post-preview__header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--spacing-md);
    font-size: var(--font-size-sm);
  }

  .post-preview__category {
    background: var(--color-primary);
    color: white;
    padding: var(--spacing-xs) var(--spacing-sm);
    border-radius: var(--radius-sm);
    font-weight: var(--font-weight-medium);
    font-size: var(--font-size-xs);
  }

  .post-preview__reading-time {
    color: var(--color-text-light);
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-medium);
  }

  .post-preview__title {
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-semibold);
    color: var(--color-text);
    line-height: var(--line-height-tight);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .post-preview__link {
    color: inherit;
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .post-preview__link:hover {
    color: var(--color-primary);
  }


  /* Responsive */
  @media (max-width: 768px) {
    .post-preview {
      padding: var(--spacing-lg);
    }
    
    .post-preview__header {
      flex-direction: column;
      align-items: flex-start;
      gap: var(--spacing-xs);
    }
    
    .post-preview__title {
      white-space: normal;
      overflow: visible;
      text-overflow: unset;
    }
  }
</style>
