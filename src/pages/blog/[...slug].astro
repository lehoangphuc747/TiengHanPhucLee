---
// Trang hiển thị chi tiết bài viết blog
import Layout from '../../components/common/Layout.astro';
import PostNavigation from '../../components/Blog/PostNavigation.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();
---

<Layout title={`${post.data.title} - Phúc Lee`} description={post.data.description}>
  <article class="blog-post">
    <header class="post-header">
      <div class="post-meta">
        <span class="post-category">{post.data.category}</span>
        <time class="post-date">
          {new Date(post.data.publishedAt).toLocaleDateString('vi-VN', {
            year: 'numeric',
            month: 'long',
            day: 'numeric'
          })}
        </time>
      </div>
      
      <h1 class="post-title">{post.data.title}</h1>
      
      <p class="post-description">{post.data.description}</p>
      
      <div class="post-info">
        <div class="post-tags">
          {post.data.tags.map((tag) => (
            <span class="post-tag">#{tag}</span>
          ))}
        </div>
        
        <div class="post-meta-details">
          <div class="post-author-info">
            <span class="post-author">Tác giả: {post.data.author}</span>
            <span class="post-reading-time">{post.data.readingTime} phút đọc</span>
          </div>
          
          {post.data.source && (
            <div class="post-source-info">
              <span class="post-source-label">Nguồn:</span>
              <a href={post.data.source} target="_blank" rel="noopener noreferrer" class="post-source-link">
                {post.data.sourceTitle || 'Xem nguồn'}
              </a>
            </div>
          )}
        </div>
      </div>
    </header>

    <div class="post-content">
      <Content />
    </div>

    <PostNavigation />
  </article>
</Layout>

<style>
  .blog-post {
    max-width: 800px;
    margin: 0 auto;
    padding: var(--spacing-xl);
  }

  .post-header {
    margin-bottom: var(--spacing-3xl);
    text-align: center;
  }

  .post-meta {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: var(--spacing-md);
    margin-bottom: var(--spacing-lg);
    flex-wrap: wrap;
  }

  .post-category {
    background: var(--color-primary);
    color: white;
    padding: var(--spacing-xs) var(--spacing-sm);
    border-radius: var(--radius-sm);
    font-weight: var(--font-weight-medium);
    font-size: var(--font-size-sm);
  }

  .post-date {
    color: var(--color-text-muted);
    font-weight: var(--font-weight-medium);
    font-size: var(--font-size-sm);
  }

  .post-title {
    font-size: var(--font-size-4xl);
    font-weight: var(--font-weight-bold);
    color: var(--color-text);
    margin-bottom: var(--spacing-lg);
    line-height: var(--line-height-tight);
  }

  .post-description {
    font-size: var(--font-size-lg);
    color: var(--color-text-muted);
    line-height: var(--line-height-relaxed);
    margin-bottom: var(--spacing-xl);
  }

  .post-info {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-lg);
    padding-top: var(--spacing-lg);
    border-top: 1px solid var(--color-border);
  }

  .post-tags {
    display: flex;
    gap: var(--spacing-xs);
    flex-wrap: wrap;
    justify-content: center;
  }

  .post-tag {
    background: var(--color-surface-alt);
    color: var(--color-text-muted);
    padding: var(--spacing-xs) var(--spacing-sm);
    border-radius: var(--radius-sm);
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-medium);
  }

  .post-meta-details {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: var(--spacing-md);
    padding: var(--spacing-md);
    background: var(--color-surface-alt);
    border-radius: var(--radius-md);
  }

  .post-author-info {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xs);
  }

  .post-author {
    color: var(--color-text-muted);
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-medium);
  }

  .post-reading-time {
    color: var(--color-text-light);
    font-size: var(--font-size-sm);
  }

  .post-source-info {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: var(--spacing-xs);
  }

  .post-source-label {
    color: var(--color-text-muted);
    font-weight: var(--font-weight-medium);
    font-size: var(--font-size-sm);
  }

  .post-source-link {
    color: var(--color-primary);
    text-decoration: none;
    font-weight: var(--font-weight-medium);
    font-size: var(--font-size-sm);
    transition: color var(--transition-fast);
  }

  .post-source-link:hover {
    color: var(--color-primary-dark);
    text-decoration: underline;
  }

  .post-content {
    line-height: var(--line-height-relaxed);
    color: var(--color-text);
  }

  .post-content h1,
  .post-content h2,
  .post-content h3,
  .post-content h4,
  .post-content h5,
  .post-content h6 {
    color: var(--color-text);
    margin-top: var(--spacing-2xl);
    margin-bottom: var(--spacing-lg);
    font-weight: var(--font-weight-semibold);
  }

  .post-content h1 {
    font-size: var(--font-size-3xl);
  }

  .post-content h2 {
    font-size: var(--font-size-2xl);
  }

  .post-content h3 {
    font-size: var(--font-size-xl);
  }

  .post-content p {
    margin-bottom: var(--spacing-lg);
  }

  .post-content ul,
  .post-content ol {
    margin-bottom: var(--spacing-lg);
    padding-left: var(--spacing-xl);
  }

  .post-content li {
    margin-bottom: var(--spacing-sm);
  }

  .post-content blockquote {
    border-left: 4px solid var(--color-primary);
    padding-left: var(--spacing-lg);
    margin: var(--spacing-xl) 0;
    font-style: italic;
    color: var(--color-text-muted);
  }

  .post-content code {
    background: var(--color-surface-alt);
    padding: var(--spacing-xs) var(--spacing-sm);
    border-radius: var(--radius-sm);
    font-family: var(--font-family-mono);
    font-size: var(--font-size-sm);
  }

  .post-content pre {
    background: var(--color-surface-alt);
    padding: var(--spacing-lg);
    border-radius: var(--radius-md);
    overflow-x: auto;
    margin: var(--spacing-lg) 0;
  }

  .post-content pre code {
    background: none;
    padding: 0;
  }

  .post-footer {
    margin-top: var(--spacing-3xl);
    padding-top: var(--spacing-xl);
    border-top: 1px solid var(--color-border);
  }

  .back-to-blog {
    display: inline-flex;
    align-items: center;
    color: var(--color-primary);
    text-decoration: none;
    font-weight: var(--font-weight-medium);
    transition: color var(--transition-fast);
  }

  .back-to-blog:hover {
    color: var(--color-primary-hover);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .blog-post {
      padding: var(--spacing-lg);
    }
    
    .post-meta {
      flex-direction: column;
      gap: var(--spacing-sm);
    }
    
    .post-meta-details {
      flex-direction: column;
      align-items: flex-start;
      gap: var(--spacing-md);
    }
    
    .post-source-info {
      align-items: flex-start;
    }
    
    .post-title {
      font-size: var(--font-size-3xl);
    }
  }
</style>
